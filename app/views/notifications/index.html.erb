<p id="notice"><%= notice %></p>

<h1>Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Receiver</th>
      <th>Sender</th>
      <th>Action</th>
      <th>Read at</th>
      <th>Notifiable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.receiver_id %></td>
        <td><%= notification.sender_id %></td>
        <td><%= notification.action %></td>
        <td><%= notification.read_at %></td>
        <td><%= notification.notifiable %></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification', new_notification_path %>
